<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:elevation="20dp"
        app:cardCornerRadius="12dp"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:text="Question"
                android:layout_width="match_parent"
                android:textSize="40sp"
                android:layout_height="wrap_content" android:id="@+id/question_view_result_item"/>
        <TextView
                android:text="Your answer"
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:layout_height="wrap_content" android:id="@+id/your_answer_result"/>
        <TextView
                android:text="Correct Answer"
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:layout_height="wrap_content" android:id="@+id/correct_answer_text_view"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
