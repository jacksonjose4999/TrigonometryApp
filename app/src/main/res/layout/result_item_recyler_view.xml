<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingLeft="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="Question"
            android:layout_width="match_parent"
            android:textSize="40sp"
            android:layout_height="wrap_content" android:id="@+id/question_view_result_item"/>
    <TextView
            android:text="Your answer"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:layout_height="wrap_content" android:id="@+id/your_answer_result"/>
    <TextView
            android:text="Correct Answer"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:layout_height="wrap_content" android:id="@+id/correct_answer_text_view"/>
</LinearLayout>