<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizActivity" android:background="#00BCD4">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Question No : 1/x"
              android:id="@+id/question_no_view" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toBottomOf="@+id/timer_view" android:layout_marginBottom="20dp"
              app:layout_constraintBottom_toTopOf="@+id/question_view" android:textColor="#160202"
              android:textSize="18sp"/>
    <TextView
            android:text="this is the questions \n this is the question \n this is the question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/question_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/question_no_view"
            android:layout_marginBottom="516dp" android:textColor="#000000" android:textSize="25sp"/>
    <TextView
            android:text="00:07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer_view" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="35sp" android:textColor="#000000"
            android:textStyle="bold" android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/question_no_view"/>
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/question_view"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/next_question_button"
            android:id="@+id/radioGroup" app:layout_constraintVertical_bias="0.551"
            app:layout_constraintHorizontal_bias="0.0">
        <RadioButton
                android:text="option 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/option_1" android:layout_weight="1"
                android:textSize="18sp"/>
        <RadioButton
                android:text="option 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/option_2" android:layout_weight="1"
                android:textSize="18sp"/>
        <RadioButton
                android:text="option 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/option_3" android:layout_weight="1"
                android:textSize="18sp"/>
    </RadioGroup>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_question_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="140dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>


</androidx.constraintlayout.widget.ConstraintLayout>