<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.trigopdfsclasses.TrigonometricRatiosAndValues" android:id="@+id/linearLayout">

    <TextView android:layout_width="0dp" android:layout_height="50dp"
              android:textSize="24dp"
              android:text="Current Highest Score : " android:gravity="center" android:paddingTop="10dp"
              android:paddingRight="10dp"
              android:textStyle="italic"
              android:background="@drawable/options_button_style"
              android:elevation="8dp"
              android:padding="8dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:layout_marginTop="8dp"
              android:textColor="#11126D"
              android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/pdf_view_add_sub_functions"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdf_view_ratios_functions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:elevation="6dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ratios_and_functions_quiz" app:layout_constraintStart_toStartOf="parent"/>

    <Button android:layout_width="0dp" android:layout_height="40dp"
            android:textSize="20dp"
            android:text="Pop Quiz"
            android:background="@drawable/rect_oval2"
            android:textColor="#eeeeee"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ratios_and_functions_quiz" app:layout_constraintTop_toBottomOf="@+id/pdf_view_ratios_functions"
            android:layout_marginBottom="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>