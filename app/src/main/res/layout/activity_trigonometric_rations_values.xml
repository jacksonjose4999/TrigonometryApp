<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.example.trigopdfsclasses.TrigonometricRatiosAndValues">


    <TextView
            android:text="Current Score : 12"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:background="@drawable/options_button_style"
            android:elevation="8dp"
            android:layout_margin="10dp"
            android:textColor="#123456"
            android:textStyle="italic"
            android:layout_height="160dp" android:id="@+id/textView" android:layout_weight="1" android:gravity="center"
            android:paddingRight="10dp" android:textSize="24dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/trigonometric_ratios"
            android:id="@+id/imageView2" android:layout_weight="1"/>

    <Button android:layout_width="match_parent" android:layout_height="50dp"
            android:id="@+id/values_quiz"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/rect_oval2"
            android:textColor="#eeeeee"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:elevation="6dp"
            android:text="Pop Quiz"
    />
</LinearLayout>