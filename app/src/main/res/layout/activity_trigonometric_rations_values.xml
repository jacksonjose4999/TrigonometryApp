<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".TrigonometricRationsValues">


    <TextView
            android:text="Current Score : 0"
            android:layout_width="match_parent"
            android:layout_height="193dp" android:id="@+id/textView" android:layout_weight="1" android:gravity="end"
            android:paddingRight="10dp" android:paddingTop="20dp" android:textSize="20sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/trigonometric_ratios"
            android:id="@+id/imageView2" android:layout_weight="1"/>

    <Button android:layout_width="match_parent" android:layout_height="50dp"
            android:id="@+id/values_quiz"
            android:text="Pop Quiz"
    />
</LinearLayout>